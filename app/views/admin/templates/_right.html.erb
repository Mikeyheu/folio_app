<div class="right-panel">
	<div class="navbar secondary-navbar">
		<ul class="nav">
			<li class="icon_button">
				<a href="#" id="caret">
					<div>
						<div class="icon caret-left"></div>
					</div>
				</a>
			</li>
			<li class="divider-vertical"></li>
		</ul>
		<div class="left secondary-nav-text"> </div>
		<ul class="nav pull-right">
			<li class="divider-vertical"></li>
			<li class="icon_button">
				<%= link_to site_path(@site),{:target => "_blank"} do %>
				<div id="view" class="" rel="tooltip" data-original-title="View Site">
					<div class="icon view"></div>
				</div>
				<% end %>
			</li>
			<li class="divider-vertical"></li>
			<li class="icon_button">
				<a href="#" class="save-button" rel="tooltip" rel="tooltip" data-original-title="Save">
					<div id="save" class="" >
						<div class="icon save"></div>
					</div>
				</a>
			</li>
			<li class="divider-vertical"></li>
			<li class="icon_button">
				<a href="#" class="" rel="tooltip" data-original-title="Trash" >
					<div id="trash" class="">
						<div class="icon trash"></div>
					</div>
				</a>
			</li>
		</ul>
	</div>

	<div class="right-inner">

		<ul id="templates" class="template_grid" data-update-url="<%= update_template_admin_site_template_path %>">
			<% @templates.each do |template| %>
			<li id="template_<%= template.id %>" class="template <%= 'selected' if @template.name == template.name %>">

				<div class="template_image">
					<%= image_tag template.image_url %>
				</div>
				<div class="template_border"></div>

				<div class="template_title"><%= template.name %></div>
			</li>  
			<% end %>
		</ul>

	</div>
</div>

