/************ Left Nav Menu Panel CSS ************/

.menu-title {
	display: block;
	padding: 7px 0px 5px 12px;
	font-size: 11px;
	font-weight: bold;
	line-height: 20px;
	color: #999;
	text-transform: uppercase;
}

#page-menu {
	height:400px;
	background-color:#EEE;
	/*overflow:scroll;*/
}

#panes li > div:hover, #panes li > div.active, .dropzone.menu-hover {
	color:#FFF;
	background-color: #0099ff;
	background-image: -moz-linear-gradient(top, #0099ff, #0077dd);
	background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#0099ff), to(#0077dd));
	background-image: -webkit-linear-gradient(top, #0099ff, #0077dd);
	background-image: -o-linear-gradient(top, #0099ff, #0077dd);
	background-image: linear-gradient(to bottom, #0099ff, #0077dd);
	background-repeat: repeat-x;
	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff0099ff', endColorstr='#ff0077dd', GradientType=0);
}

#page-menu div:hover .content-page, #archive-menu div:hover .content-page, .menu-hover .content-page {background-position:0px 0px;}
#page-menu div:hover .folder, #archive-menu div:hover .folder, .menu-hover .folder {background-position:0px -16px;}
#page-menu div:hover .link, #archive-menu div:hover .link, .menu-hover .link {background-position:0px -32px;}
#page-menu div:hover .gallery, #archive-menu div:hover .gallery,  .menu-hover .gallery {background-position:0px -48px;}
#page-menu div:hover .folder.open, #archive-menu div:hover .folder.open, .menu-hover .folder.open {background-position:0px -64px;}


#page-menu div:hover .homepage, #archive-menu div:hover .homepage,  .menu-hover .homepage {background-position:0px -112px;}

#panes li div:hover a {
	color:#FFF;
}

#panes a  {
	color:#333;
}

#panes li div.menu-hover a {
	color:#FFF;
}

#page-menu div.menu-title:hover, #archive-menu div.menu-title:hover {
	color:#999;
	background-color: #EEE;
	background-image: none;
}

ol {
	margin: 0;
	padding: 0;
	padding-left: 30px;
	font-size:14px;
}

ol.sortable, ol.sortable ol {
	margin: 0;
	padding: 0;
	list-style-type: none;
	min-height:30px;
}

ol.sortable {
	
}


ol.sortable ol {
	margin: 0 0 0 20px;
}

ol.sortable {
	margin-left: 0px;
	margin-top: 0px;
}

#panes li {
	margin-left:0px;
	padding: 0;
}

#panes li div  {
	padding:5px 5px 5px 12px;
}

.mjs-nestedSortable-error {
	background: #fbe3e4;
	border-color: transparent;
}

.icon-nav {
	display: inline-block;
	width: 16px;
	height: 16px;
	margin-right: 5px;
	vertical-align: text-top;
	background-repeat: no-repeat;
	background-image:url(<%= asset_path 'menu-icons.png' %>);
}

div.nodrop {
	position:relative;
	background:transparent;
}

#panes li div.menu-container {
	position:absolute;
	overflow:hidden;
	left:36px;
	top:6px;
	width:140px;
	height:20px;
	padding: 0;
	background:transparent;
}

#all_images, #homepage {
	display:block;
	height:20px;
	width:220px;
	position:relative;
	font-size:14px;
	margin: 0;
	padding:5px 5px 5px 12px;
}

#all_images:hover, #homepage:hover {
	color:#FFF;
	background-color: #0099ff;
	background-image: -moz-linear-gradient(top, #0099ff, #0077dd);
	background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#0099ff), to(#0077dd));
	background-image: -webkit-linear-gradient(top, #0099ff, #0077dd);
	background-image: -o-linear-gradient(top, #0099ff, #0077dd);
	background-image: linear-gradient(to bottom, #0099ff, #0077dd);
	background-repeat: repeat-x;
	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff0099ff', endColorstr='#ff0077dd', GradientType=0);
}

#all_images:hover a, #homepage:hover a {
	color:#FFF;
}

#all_images div.menu-container, #homepage div.menu-container{
	position:absolute;
	overflow:hidden;
	left:24px;
	top:1px;
	width:140px;
	height:20px;
	padding: 0;
	background:transparent;
}


#page-menu div:hover .close-button, #archive-menu div:hover .close-button, #page-menu div.active .close-button, #archive-menu div.active .close-button, .menu-hover .close-button {
	display:inline-block;
}

#page-menu div:hover .settings-button, #archive-menu div:hover .settings-button, #page-menu div.active .settings-button, #archive-menu div.active .settings-button, .menu-hover .settings-button {
	display:inline-block;
}

.settings-button {
	position:absolute;
	right:26px;
	display:none;
}

.close-button {
	position:absolute;
	right:5px;
	display:none;
}

.placeholder {
	border: 1px dashed #4183C4;
	-webkit-border-radius: 3px;
	-moz-border-radius: 3px;
	border-radius: 3px;
}



