<div class="left-panel">
  <div id="secondary-navbar" class="navbar secondary-navbar">
    <ul class="nav icon_button">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="icon add left"></i><div class="left secondary-nav-text"> Create <b class="caret"></b></div> </a>
        <ul class="dropdown-menu">
          <li><%= link_to 'Page', new_admin_site_page_path, {:remote => true, 'data-toggle' => 'modal', 'data-target' => "#myModal"} %></li>
          <li><a href="#">Gallery</a></li>
          <li><a href="#">Folder(Group)</a></li>
          <li><%= link_to 'Link', new_admin_site_link_path, {:remote => true, 'data-toggle' => 'modal', 'data-target' => "#myModal"} %></li>
        </ul>
      </li>   
      <li class="divider-vertical"></li>     
    </ul>   
    <ul class="nav icon_button">
      <li>
        <a id="input_link_area" href="#">
          <div class="input_container">
             <%= render 'multiupload' %> 
            <i class="icon upload left"></i>
            <div class="left secondary-nav-text"> Upload</div>
          </div>
        </a>
      </li>
      <li class="divider-vertical"></li>        
    </ul>
  </div>
  <div id="panes">
    <div id="page-menu" class="west-center">
      <div class="menu-title">Site Pages</div>
      <ol class="sortable" data-update-url="<%= sort_admin_site_path %>">
        <% @site.nav_items.order("position").each do |nav_item| %>
          <% unless nav_item.parent %>
            <li id="nav_item_<%= nav_item.id %>"><div><i class="icon-nav <%= icon(nav_item.navable.class.name) %>"></i><a href="#"><%= nav_item.navable.name %></a></div>
            <% unless nav_item.children.empty? %>
              <ol>
                <% nav_item.children.order("position").each do |subnav_item| %>
                   <li id="nav_item_<%= subnav_item.id %>"><div class="dropzone"><i class="icon-nav <%= icon(subnav_item.navable.class.name) %>"></i><a href="#"><%= subnav_item.navable.name %></a></div></li>
                <% end %>
              </ol>
            <% end %>
            </li>
          <% end %>
        <% end %>
      </ol>
    </div>
      
    
    <div id="archive-menu" class="west-south">
      <div class="menu-title">Galleries</div>
      <ol class="sortable" data-update-url="<%= sort_admin_site_galleries_path %>">
        <li class="folder">
          <div><i class="icon-nav folder"></i><a href="#">Recent Uploads</a></div>
          <ol>
            <li><div class="dropzone"><i class="icon-nav gallery"></i><a href="#">10-26-2012</a></div></li>
            <li><div class="dropzone"><i class="icon-nav gallery"></i>10-24-2012</div></li>
            <li><div class="dropzone"><i class="icon-nav gallery"></i>10-20-2012</div></li>
            <li><div class="dropzone"><i class="icon-nav gallery"></i>Gap Model Shoot</div></li>
          </ol>
        </li>
        <li class="folder">
          <div><i class="icon-nav folder"></i><a href="#">My Shots</a></div>
          <ol>
            <li><div class="dropzone"><i class="icon-nav gallery"></i><a href="#">Fashion Random</a></div></li>
            <li><div class="dropzone"><i class="icon-nav gallery"></i>Random</div></li>
            <li><div class="dropzone"><i class="icon-nav gallery"></i>Portraits</div></li>
            <li><div class="dropzone"><i class="icon-nav gallery"></i>Advertising Shots</div></li>
          </ol>
        </li>
      </ol>
    </div>
  </div>
</div>