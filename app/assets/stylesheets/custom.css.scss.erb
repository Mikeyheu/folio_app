@import "bootstrap";

/************ General CSS ************/

html,body { height:100%; width:100%; }
a, a:hover { text-decoration: none;}
li { list-style: none;}
ul, ol { padding:0; margin:0;}

.left { float:left; }
.right { float:right; }
