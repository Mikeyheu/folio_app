	margin-left:15px;
}

/************ Primary And Secondary Navigation CSS ************/

a.logo, a.logo:hover {
	margin-top:8px;
	margin-left:15px;
	margin-right:20px;
	font-size:20px;
	font-weight:bold;
	color:#FFF;
	float:left;
	text-decoration:none;
}

.navbar {
	margin-bottom: 0;
}

.navbar-inner {
  min-height: 40px;
  padding-left: 0px;
  padding-right: 0px;
	border: none;
  -webkit-border-radius: 0px;
  -moz-border-radius: 0px;
  border-radius: 0px;
  -webkit-box-shadow: 0px;
  -moz-box-shadow: 0px;
  box-shadow: 0px;
}

/* Primary nav text */
.navbar .nav > li > a {
  float: none;
  padding: 10px 15px 10px;
  color: #999;
  text-decoration: none;
  text-shadow: none;
}

/* Primary nav active text */
.navbar-inverse .nav .active > a,
.navbar-inverse .nav .active > a:hover,
.navbar-inverse .nav .active > a:focus {
	background-image:url(<%= asset_path 'caret.png' %>);
	background-position: center bottom;
	background-repeat: no-repeat;
  color: #FFF;
  background-color: #111111;
}

/* Primary nav dropdown text */
.navbar .nav li.dropdown.open > .dropdown-toggle,
.navbar .nav li.dropdown.active > .dropdown-toggle,
.navbar .nav li.dropdown.open.active > .dropdown-toggle {
  background-color: transparent;
  color: #FFF;
}

/* Primary nav drop down carets */
.navbar .nav li.dropdown:hover > .dropdown-toggle .caret {
  border-top-color: #FFF;
  border-bottom-color: #FFF;
}

/* Secondary nav background color and height */
.secondary-navbar {
	height:36px;
	background-color: #0099ff;
	background-image: -moz-linear-gradient(top, #0099ff, #0077dd);
	background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#0099ff), to(#0077dd));
	background-image: -webkit-linear-gradient(top, #0099ff, #0077dd);
	background-image: -o-linear-gradient(top, #0099ff, #0077dd);
	background-image: linear-gradient(to bottom, #0099ff, #0077dd);
	background-repeat: repeat-x;
	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ff0099ff', endColorstr='#ff0077dd', GradientType=0);
}

/* Secondary nav text */
.secondary-navbar .nav > li > a,
.secondary-navbar .nav > li > a:hover {
  float: none;
  padding: 10px 0 10px;
  color: #FFF;
  text-decoration: none;
  text-shadow: none;
}

/* Secondary nav text */
.secondary-navbar.links .nav > li > a,
.secondary-navbar.links .nav > li > a:hover {
  float: none;
  padding: 10px 15px 10px;
  color: #FFF;
  text-decoration: none;
  text-shadow: none;
}



/* Secondary nav active text */
.secondary-navbar .nav .active > a,
.secondary-navbar .nav .active > a:hover,
.secondary-navbar .nav .active > a:focus {
	background-image: none;
	background-position: center bottom;
	background-repeat: no-repeat;
  color: #FFF;
  background-color: transparent;
}

/* Secondary nav drop down Carets */
.secondary-navbar .nav li.dropdown > .dropdown-toggle .caret, 
.secondary-navbar .nav li.dropdown.open > .dropdown-toggle .caret {
  border-top-color: #FFF;
  border-bottom-color: #FFF;
}

/* Secondary nav divider line */
.navbar .divider-vertical {
	height: 36px;
	border-left: 0;
	margin: 0;
	border-right: 1px solid #5bbdff;
}

.secondary-nav-text {
